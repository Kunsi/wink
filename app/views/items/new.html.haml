- content_for :title, "New item - "

%h2 Create new item
- if @item.errors.any?
  %ul
    - @item.errors.each do |message|
      %li
        = message

= form_for(@item, as: :item) do |f|
  = render partial: 'form', locals: {f: f}, object: @item

  = f.submit "Create"
  = link_to 'Cancel', items_path


:javascript
  $(function() {
    $('#item_date_of_purchase').datepicker({ dateFormat: 'dd-mm-yy' }).val();
  });
