- content_for :title, "#{@item.case.acronym}: #{@item.name} - "

%h2= "#{@item.case.name}: #{@item.name}"

%ol.properties
  %li
    %label Name
    %span.about= @item.name
  %li
    %label Model
    %span.model= @item.model
  %li
    %label Manufacturer
    %span.manufacturer= @item.manufacturer
  %li
    %label Serial number
    %span.serial_number= @item.serial_number
  - if @item.item
    %li
      %label Relates to
      %span.relates_to= @item.item.name
  %li
    %label Price
    %span.price= @item.price
  %li
    %label Date of purchase
    %span.date_of_purchase= @item.date_of_purchase
  %li
    %label Type
    - if @item.item_type
      %span.item_type= @item.item_type.name
    - else
      %span.item_type
  %li
    %label Broken
    %span.broken= @item.broken
  %li
    %label Missing
    %span.missing= @item.missing
  %li
    %label Actions
    %span.actions
      %a{href: edit_item_path(@item)} edit
      %a{href: clone_item_path(@item)} clone
      %a{href: delete_item_path(@item)} delete

- if @subitems.count != 0
  %h3 Subitems
  %ul
    - @subitems.each do |subitem|
      %li
        %a{href: item_path(subitem)}= subitem.name

%h3 Comments

%a{href: ""} create new comment

%table{border: 1}
  %thead
    %tr
      %th Date
      %th Author
      %th Comment
  %tbody
    - @item.item_comments.each do |comment|
      %tr
        %td= comment.created_at
        %td= comment.author
        %td= comment.comment
