%h2= @case.name

%ol.properties
  %li
    %label Name
    %span.name= @case.name
  %li
    %label Case type
    %span.case_type= @case.case_type.name
  %li
    %label Acronym
    %span.acronym= @case.acronym
  %li
    %label Actions
    %span.actions
      %a{href: edit_case_path(@case)} edit
      %a{href: delete_case_path(@case)} delete


%h2 Items

%table{border:1}
  %thead
    %tr
      %th Name
      %th Relates to
      %th Serial number
      %th Price ()â‚¬)
      %th Actions

  %tbody
    - @case.items.each do |item|
      %tr
        %td= item.name
        - if item.item
          %td= item.item.name
        - else
          %td
        %td= item.serial_number
        %td= item.price

        %td
          %a{href: ""} show
          %a{href: ""} edit
          %a{href: ""} delete

%a{href: ""} add new item
